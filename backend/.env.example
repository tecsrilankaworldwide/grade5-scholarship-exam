# Backend Environment Variables Template
# Copy this to .env and fill in the actual values

# MongoDB Connection (Get from MongoDB Atlas)
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# Database Name
DB_NAME_EXAM=exam_bureau_db

# Security - Generate random secret key
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production

# CORS Origins (comma-separated, or * for all)
# Production: https://your-frontend-domain.com
# Development: http://localhost:3001,http://localhost:3000
CORS_ORIGINS=*

# Optional: Email configuration (for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Optional: SMS configuration (for future features)
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_PHONE_NUMBER=+1234567890
