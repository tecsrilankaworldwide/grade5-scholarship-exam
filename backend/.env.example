# Production Environment Variables Example
# Copy this to .env and fill in your actual values

# MongoDB Atlas Production Connection
# Get this from MongoDB Atlas: Database → Cluster → Connect → Drivers
MONGO_URL="mongodb+srv://<username>:<password>@cluster1.so8atq.mongodb.net/?retryWrites=true&w=majority"
DB_NAME_EXAM="exam_bureau_prod"

# Security - Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY="your-secret-key-here"

# CORS Origins - Update with your actual domains
CORS_ORIGINS="https://educationreforms.cloud,https://www.educationreforms.cloud,https://api.educationreforms.cloud"

# Optional: PayPal Integration (if using payment features)
PAYPAL_CLIENT_ID="your_paypal_client_id_here"
PAYPAL_CLIENT_SECRET="your_paypal_secret_here"

# Optional: LLM Integration (if using AI features)
EMERGENT_LLM_KEY="your_llm_key_here"
